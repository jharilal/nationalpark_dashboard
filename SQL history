SELECT t.trail_id, p.park_name,t.trail_name, t.features FROM TRAIL t
JOIN park p
ON t.park_id = p.park_id
WHERE t.trail_id in (
SELECT trail_id FROM features
WHERE feature = ''
);

> Output

