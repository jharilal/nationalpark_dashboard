SELECT p.park_name, count(*) FROM trail
JOIN park p
on trail.park_id = p.park_id
WHERE trail_id IN (
SELECT distinct(trail_id) FROM features
WHERE trail_id NOT IN (
SELECT distinct(trail_id) FROM features
WHERE feature ILIKE '%dog%'
	))
GROUP BY p.park_name
ORDER BY count(*) DESC

